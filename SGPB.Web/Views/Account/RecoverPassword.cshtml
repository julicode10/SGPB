@model SGPB.Web.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}

<header class="bg-primary py-5 mt-lg-5">
    <div class="container px-4 px-lg-5 my-2">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">@ViewData["Title"]</h1>
        </div>
    </div>
</header>
<section class="py-3">
    <div class="card-footer p-4 pt-0 border-bottom-0 bg-transparent  border-bottom">
    </div>
    <div class="container px-5 my-5 px-5" style="max-width: 80%;">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-6">
                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Recuperar contraseña" class="btn btn-outline-primary" />
                        <a asp-action="Login" class="btn btn-outline-success">Atrás para iniciar sesión</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}


