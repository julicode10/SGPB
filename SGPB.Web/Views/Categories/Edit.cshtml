@model SGPB.Web.Models.CategoryViewModel

@{
    ViewData["Title"] = "Editar Categoría";
}

<header class="bg-primary py-5 mt-lg-5">
    <div class="container px-4 px-lg-5 my-2">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Editar Categoría</h1>
        </div>
    </div>
</header>
<section class="py-3">
    <div class="card-footer p-4 pt-0 border-bottom-0 bg-transparent  border-bottom">
    </div>
    <div class="container px-5 my-5 px-5" style="max-width: 80%;">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-6">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImageId" />

                    <partial name="_Category" />

                    <div class="form-group d-flex flex-row justify-content-center alig-items-center">
                        <input type="submit" value="Editar" class="btn btn-outline-primary mr-2" />
                        <a asp-action="Index" class="btn btn-outline-success">Volver a la lista</a>
                    </div>
                </form>
            </div>
            <div class="col-md-4">
                <img src="@Model.ImageFullPath" style="width:200px;height:200px;max-width: 100%; height: auto;" />
            </div>
        </div>
    </div>
</section>

@section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
}

