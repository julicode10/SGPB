@model SGPB.Web.Models.AddBookToLendingViewModel
@{
    ViewData["Title"] = "Nuevo prestamo";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
<link rel="stylesheet" href="~/lib/font-awesome/css/regular.min.css">
<link rel="stylesheet" href="~/lib/font-awesome/css/solid.min.css">


<header class="bg-primary py-5 mt-lg-5">
    <div class="container px-4 px-lg-5 my-2">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Libro: @Html.DisplayFor(model => model.Name)</h1>
        </div>
    </div>
</header>
<section class="py-3">
    <div class="container px-4 px-lg-5">

        <div class="row gx-4 gx-lg-5 row-cols-12 row-cols-sm-12 row-cols-md-12 row-cols-xl-12 justify-content-center">
        </div>
        <div class="row gx-4 gx-lg-5 row-cols-12 row-cols-sm-12 row-cols-md-12 row-cols-xl-12 justify-content-center">

            <div class="col-lg-8">
                <div class="card mb-4">
                    <a href="#!"><img class="card-img-top" src="@Model.ImageFullPath" alt="@Model.Name" style="width:100%;height:500px;max-width: 100%"></a>
                    <div class="card-body">
                        <h2 class="card-title">@Html.DisplayFor(model => model.Serial) - @Html.DisplayFor(model => model.Name)</h2>
                        <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">@Html.DisplayNameFor(model => model.NumCopies)</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <ul class="list-unstyled mb-0">
                                    <li>@Html.DisplayFor(model => model.NumCopies)</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">@Html.DisplayNameFor(model => model.NumPages)</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <ul class="list-unstyled mb-0">
                                    <li>@Html.DisplayFor(model => model.NumPages)</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Remarks" class="control-label"></label>
                <input asp-for="Remarks" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumCopies" class="control-label"></label>
                <input asp-for="NumCopies" class="form-control" />
                <span asp-validation-for="NumCopies" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="hidden"  asp-for="BookId" class="form-control"/>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Realizar prestamo" class="btn btn-outline-primary" />
                <a class="btn btn-outline-success" asp-area="" asp-controller="Home" asp-action="Index">Regresar</a>
            </div>
        </form>

    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}